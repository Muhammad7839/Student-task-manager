<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="frontend.controller.SplashController">
    <children>
        <VBox alignment="CENTER" spacing="16" maxWidth="520">
            <children>
                <ImageView fx:id="logoImage" fitWidth="360" preserveRatio="true">
                    <image>
                        <!-- put your logo at: frontend/src/main/resources/frontend/images/STMLogo.png -->
                        <Image url="@../images/STMLogo.png"/>
                    </image>
                </ImageView>

                <Label text="Student Task Manager" styleClass="app-title"/>
                <Label text="Organize. Track. Succeed." styleClass="tagline"/>

                <ProgressBar fx:id="progressBar" prefWidth="360" progress="0.0"/>
                <Label fx:id="loadingLabel" text="Loading..." styleClass="muted"/>
            </children>
            <padding><Insets top="0" right="24" bottom="0" left="24"/></padding>
        </VBox>
    </children>
</StackPane>
