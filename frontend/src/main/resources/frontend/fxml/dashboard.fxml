<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="frontend.DashboardController" prefWidth="1200" prefHeight="760"
            styleClass="app-bg">

    <!-- left sidebar -->
    <left>
        <VBox spacing="16" alignment="TOP_CENTER" styleClass="sidebar">
            <children>
                <Label text="STM" styleClass="logo-chip"/>
                <Separator/>
                <ToggleButton text="Home"     styleClass="nav-btn" selected="true"/>
                <ToggleButton text="Tasks"    styleClass="nav-btn"/>
                <ToggleButton text="Calendar" styleClass="nav-btn"/>
                <ToggleButton text="Reports"  styleClass="nav-btn"/>
                <Pane VBox.vgrow="ALWAYS"/>
                <ToggleButton text="Settings" styleClass="nav-btn"/>
            </children>
            <padding><Insets top="20" right="12" bottom="20" left="12"/></padding>
        </VBox>
    </left>

    <!-- right utilities panel -->
    <right>
        <VBox spacing="16" styleClass="panel">
            <children>
                <Label text="Upcoming Schedule" styleClass="panel-title"/>
                <VBox spacing="12">
                    <children>
                        <HBox spacing="12" styleClass="card schedule pink">
                            <children>
                                <VBox spacing="4" HBox.hgrow="ALWAYS">
                                    <Label text="Create Infographic Design" styleClass="card-title"/>
                                    <Label text="Meeting with Exec" styleClass="muted"/>
                                </VBox>
                                <Label text="15:38" styleClass="chip"/>
                            </children>
                            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
                        </HBox>

                        <HBox spacing="12" styleClass="card schedule green">
                            <children>
                                <VBox spacing="4" HBox.hgrow="ALWAYS">
                                    <Label text="Financial Planner App" styleClass="card-title"/>
                                    <Label text="Stakeholder Review" styleClass="muted"/>
                                </VBox>
                                <Label text="24:57" styleClass="chip"/>
                            </children>
                            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
                        </HBox>
                    </children>
                </VBox>

                <Separator/>

                <Label text="New Task" styleClass="panel-title"/>
                <VBox spacing="8">
                    <children>
                        <TextField fx:id="newTaskTitle" promptText="Task title"/>
                        <FlowPane hgap="6" vgap="6">
                            <children>
                                <Button text="Meeting" styleClass="tag"/>
                                <Button text="Design"  styleClass="tag"/>
                                <Button text="Planner" styleClass="tag"/>
                                <Button text="Survey"  styleClass="tag"/>
                            </children>
                        </FlowPane>
                        <Button text="Create Task" styleClass="primary-button" onAction="#createQuickTask"/>
                    </children>
                </VBox>
            </children>
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
        </VBox>
    </right>

    <!-- center content -->
    <center>
        <VBox spacing="16">

            <!-- app bar -->
            <HBox spacing="12" styleClass="panel" alignment="CENTER_LEFT">
                <children>
                    <Label text="Student Task Manager" styleClass="appbar-title"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <TextField promptText="Search tasksâ€¦" styleClass="search-field" prefWidth="260"/>
                    <Button text="Bell" styleClass="icon-btn" mnemonicParsing="false"/>
                    <Label text="Dieunie" styleClass="muted"/>
                    <Label text="DG" styleClass="avatar"/>
                </children>
                <padding><Insets top="10" right="12" bottom="10" left="12"/></padding>
            </HBox>

            <!-- progress + greeting -->
            <HBox alignment="CENTER_LEFT" spacing="16" styleClass="panel">
                <children>
                    <ProgressBar fx:id="overallProgress" prefWidth="320" progress="0.58"/>
                    <Label text="Good morning, Dieunie" styleClass="muted"/>
                </children>
                <padding><Insets top="10" right="12" bottom="10" left="12"/></padding>
            </HBox>

            <!-- mini stats -->
            <HBox spacing="16">
                <children>
                    <VBox styleClass="stat-card">
                        <children>
                            <Label text="12" styleClass="stat-number"/>
                            <Label text="Tasks Today" styleClass="muted"/>
                        </children>
                    </VBox>
                    <VBox styleClass="stat-card">
                        <children>
                            <Label text="5" styleClass="stat-number"/>
                            <Label text="In Progress" styleClass="muted"/>
                        </children>
                    </VBox>
                    <VBox styleClass="stat-card">
                        <children>
                            <Label text="3" styleClass="stat-number ok"/>
                            <Label text="Completed" styleClass="muted"/>
                        </children>
                    </VBox>
                </children>
            </HBox>

            <!-- colored cards row -->
            <HBox spacing="16">
                <children>
                    <VBox styleClass="card xl navy" prefWidth="260" prefHeight="140">
                        <children>
                            <Label text="Meeting Business With CEO, Company One" styleClass="card-title wrap"/>
                        </children>
                        <padding><Insets top="14" right="14" bottom="14" left="14"/></padding>
                    </VBox>

                    <VBox styleClass="card xl pink" prefWidth="260" prefHeight="140">
                        <children>
                            <Label text="Create Infographic Design for Education" styleClass="card-title wrap"/>
                        </children>
                        <padding><Insets top="14" right="14" bottom="14" left="14"/></padding>
                    </VBox>

                    <VBox styleClass="card xl teal" prefWidth="260" prefHeight="140">
                        <children>
                            <Label text="Review Design Project, Company Two" styleClass="card-title wrap"/>
                        </children>
                        <padding><Insets top="14" right="14" bottom="14" left="14"/></padding>
                    </VBox>
                </children>
            </HBox>

            <!-- tab row -->
            <HBox spacing="8">
                <children>
                    <Label text="Recent Tasks" styleClass="section-title"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <ToggleButton text="Active" selected="true" styleClass="tab-pill"/>
                    <ToggleButton text="Pending" styleClass="tab-pill"/>
                    <ToggleButton text="Completed" styleClass="tab-pill"/>
                </children>
            </HBox>

            <!-- task list -->
            <ScrollPane fitToWidth="true" styleClass="panel">
                <content>
                    <VBox spacing="8">
                        <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

                        <!-- row 1 -->
                        <HBox spacing="12" styleClass="task-row">
                            <children>
                                <Label text="1" styleClass="badge blue"/>
                                <VBox spacing="2" HBox.hgrow="ALWAYS">
                                    <Label text="Task One" styleClass="task-title"/>
                                    <Label text="Create app design for marketing company" styleClass="muted"/>
                                </VBox>
                                <HBox spacing="8" alignment="CENTER_RIGHT">
                                    <ProgressBar progress="0.20" prefWidth="160"/>
                                    <Label text="Due Fri" styleClass="pill soft"/>
                                    <Label text="High" styleClass="pill warn"/>
                                </HBox>
                            </children>
                        </HBox>

                        <!-- row 2 -->
                        <HBox spacing="12" styleClass="task-row">
                            <children>
                                <Label text="2" styleClass="badge pink"/>
                                <VBox spacing="2" HBox.hgrow="ALWAYS">
                                    <Label text="Task Two" styleClass="task-title"/>
                                    <Label text="Marketing ads review" styleClass="muted"/>
                                </VBox>
                                <HBox spacing="8" alignment="CENTER_RIGHT">
                                    <ProgressBar progress="0.60" prefWidth="160"/>
                                    <Label text="Due Mon" styleClass="pill soft"/>
                                    <Label text="Medium" styleClass="pill soft"/>
                                </HBox>
                            </children>
                        </HBox>

                        <!-- row 3 -->
                        <HBox spacing="12" styleClass="task-row">
                            <children>
                                <Label text="3" styleClass="badge green"/>
                                <VBox spacing="2" HBox.hgrow="ALWAYS">
                                    <Label text="Task Three" styleClass="task-title"/>
                                    <Label text="Salary payment prep" styleClass="muted"/>
                                </VBox>
                                <HBox spacing="8" alignment="CENTER_RIGHT">
                                    <ProgressBar progress="0.90" prefWidth="160"/>
                                    <Label text="Today" styleClass="pill soft"/>
                                    <Label text="Low"  styleClass="pill soft"/>
                                </HBox>
                            </children>
                        </HBox>

                    </VBox>
                </content>
            </ScrollPane>

            <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
        </VBox>
    </center>
</BorderPane>
